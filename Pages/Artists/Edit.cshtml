@page
@model FaulknerCountyMuseumGallery.Pages.Artists.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div  id="page_title">Edit Artist</div>
<hr />
<div class="bb row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Artist.ID" />
            <div class="form-group">
                <label asp-for="Artist.Name" class="control-label"></label>
                <input asp-for="Artist.Name" class="form-control" />
                <span asp-validation-for="Artist.Name" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 30px;">
                <input type="submit" value="save" class="searchb" />
                <a class="searchb" asp-page="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

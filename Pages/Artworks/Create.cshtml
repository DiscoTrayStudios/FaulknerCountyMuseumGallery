@page
@model FaulknerCountyMuseumGallery.Pages.Artworks.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div id="title" style="text-align: left; margin-left: 20px;">Create Artwork</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Artwork.Title" class="control-label"></label>
                <input asp-for="Artwork.Title" class="form-control" />
                <span asp-validation-for="Artwork.Title" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Artwork.AccessionNumber" class="control-label"></label>
                <input asp-for="Artwork.AccessionNumber" class="form-control" />
                <span asp-validation-for="Artwork.AccessionNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artwork.ImageLink" class="control-label"></label>
                <input asp-for="Artwork.ImageLink" class="form-control" />
                <span asp-validation-for="Artwork.ImageLink" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Artwork.Size" class="control-label"></label>
                <input asp-for="Artwork.Size" class="form-control" />
                <span asp-validation-for="Artwork.Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artwork.MediumID" class="control-label"></label>
                <select asp-for="Artwork.MediumID" class="form-control"
                        asp-items="@Model.MediumNameSL">
                    <option value="">-- Select Medium --</option>
                </select>
                <span asp-validation-for="Artwork.MediumID" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Artwork.Status" class="control-label"></label>
                <input asp-for="Artwork.Status" class="form-control" />
                <span asp-validation-for="Artwork.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artwork.Donor" class="control-label"></label>
                <input asp-for="Artwork.Donor" class="form-control" />
                <span asp-validation-for="Artwork.Donor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artwork.ArtistID" class="control-label"></label>
                <select asp-for="Artwork.ArtistID" class="form-control"
                        asp-items="@Model.ArtistNameSL">
                    <option value="">-- Select Artist --</option>
                </select>
                <span asp-validation-for="Artwork.ArtistID" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Artwork.CollectionID" class="control-label"></label>
                <select asp-for="Artwork.CollectionID" class="form-control"
                        asp-items="@Model.CollectionNameSL">
                    <option value="">-- Select Collection --</option>
                </select>
                <span asp-validation-for="Artwork.CollectionID" class="text-danger" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
